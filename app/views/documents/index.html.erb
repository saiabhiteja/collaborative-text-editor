<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Documents</h1>
  
  <div class="mb-4">
    <%= button_to "New Document", documents_path, method: :post, class: "bg-blue-500 text-white px-4 py-2 rounded" %>
  </div>

  <div id="documents-list" class="space-y-4">
    <% @documents.each do |doc| %>
      <div class="border p-4 rounded">
        <%= link_to "Document #{doc.id}", document_path(doc), class: "text-blue-500 hover:underline" %>
      </div>
    <% end %>
  </div>
</div>